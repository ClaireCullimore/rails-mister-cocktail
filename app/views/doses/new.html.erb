<div class="container" style="background-color: #fdce92; width: 900px; height: 100vh; padding: 30px">
  <h1 style="text-align: center">Add a new Dose</h1>
    <div class="second-container">
      <img src="https://images.unsplash.com/photo-1610218588353-03e3130b0e2d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=668&q=80", alt="cocktail image" style="height: 450px; width: 400px; object-fit: cover; margin-left: 20px;">
      <div class="rightside">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          </br>
          <%= f.button :submit, class: "btn" %>
        <% end %>
        </br>
        <%= link_to 'Homepage', cocktails_path, class: "btn-small" %>
      </div>
  </div>
</div>
