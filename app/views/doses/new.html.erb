<div class="container" style="background-color: #fdce92; width: 900px; height: 100vh; padding: 30px">
  <h1 style="text-align: center">Add a new Dose</h1>
  <div class="second-container">
    <img src= "images/dose_image.jpeg", alt="cocktail image" style="height: 450px; width: 400px; object-fit: cover; margin-left: 20px;">
    <div class="rightside">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        </br>
        <%= f.button :submit, class: "btn" %>
      <% end %>
      </br>
      <%= link_to 'Homepage', cocktails_path, class: "btn-small" %>
    </div>
  </div>
</div>
