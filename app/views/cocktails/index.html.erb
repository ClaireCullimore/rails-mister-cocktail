<div class="home-banner">
  <h1>The Cocktail Shop</h1>
  <h2 style="color: #f1e0d0; margin-top: 20px;">Shake a cocktail or <%= link_to 'Add a new mix', new_cocktail_path, class: "index-btn" %></h2>
</div>
<div class="middle-body">
  <div class="container">
    <div class="cards-grid">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key %>
            <% else %>
              <img src= "" alt="cocktail">
            <% end %>
            <p><%= cocktail.name %></p>
          </div>
        <% end %>
      <% end %>
      </div>
  </div>
</div>
