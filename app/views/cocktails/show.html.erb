<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% if @cocktail.photo.attached?%>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <% @cocktail.doses.each do |dose|%>
    <p><%= dose.description %> of <%= dose.ingredient.name%> -
    <%=link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i> </p>
    <% end %>
  <% end %>
</br>
  <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <%= link_to 'Homepage', cocktails_path, class: "btn btn-primary" %>
</div>
